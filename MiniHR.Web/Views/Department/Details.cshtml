@model MiniHR.Application.DTOs.DepartmentDto

@{
    ViewBag.Title = "Department Details";
    //Layout = "_Layout"; // Ensure your layout name is correct
}
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Department Details</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" />
</head>
<div class="container mt-5">
    <h2 class="mb-4 text-center">@ViewBag.Title</h2>

    <div class="card shadow-sm mx-auto" style="max-width: 600px;">
        <div class="card-header bg-primary text-white">
            <h5 class="mb-0">@Model.DepartmentName</h5>
        </div>
        <div class="card-body">
            <dl class="row">
                <dt class="col-sm-4">Head of Department</dt>
                <dd class="col-sm-8">@Model.HeadOfDepartment</dd>
            </dl>
            <div class="text-end">
                @* <a asp-action="Index" asp-controller="Employee" class="btn btn-secondary">← Back to List</a>*@
                @Html.ActionLink("Back to List", "Index", null, new { @class = "btn btn-secondary" })
              @*  @Html.ActionLink("Home", "Dashboard", null, new { @class = "btn btn-secondary" })*@

            </div>
        </div>
    </div>
</div>
