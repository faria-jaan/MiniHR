@model MiniHR.Application.DTOs.DepartmentDto

@using MiniHR.Application.DTOs

@{
    ViewBag.Title = "Edit Department";
}

<head>
    <meta name="viewport" content="width=device-width" />
    <title>Edit Department</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" />
</head>

<div class="card shadow-sm mb-4">
    <h2 class="mb-4">@ViewBag.Title</h2>
    <div class="card shadow-sm">
        <div class="card-body">
            @using (Html.BeginForm("Edit", "Department", FormMethod.Post, new { @class = "needs-validation", novalidate = "novalidate" }))
            {
                <div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>
                @Html.AntiForgeryToken()
                @Html.HiddenFor(m => m.DepartmentID)

                <div class="mb-3">
                    @Html.LabelFor(m => m.DepartmentName, new { @class = "form-label" })
                    @Html.TextBoxFor(m => m.DepartmentName, new { @class = "form-control", placeholder = "Enter department name", required = "required" })
                    @Html.ValidationMessageFor(m => m.DepartmentName, "", new { @class = "text-danger" })
                </div>

                <div class="mb-3">
                    @Html.LabelFor(m => m.HeadOfDepartment, new { @class = "form-label" })
                    @Html.TextBoxFor(m => m.HeadOfDepartment, new { @class = "form-control", placeholder = "Enter head of department", required = "required" })
                    @Html.ValidationMessageFor(m => m.HeadOfDepartment, "", new { @class = "text-danger" })
                </div>

                <div class="d-flex justify-content-end mt-4">
                    <button type="submit" class="btn btn-primary me-2">
                        <i class="bi bi-save me-1"></i> Update
                    </button>
                    @Html.ActionLink("Cancel", "Index", null, new { @class = "btn btn-outline-secondary" })
                   @* @Html.ActionLink("Home", "Dashboard", null, new { @class = "btn btn-secondary" })*@

                </div>
            }
        </div>
    </div>
</div>

@section Scripts {
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validate/1.19.5/jquery.validate.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validation-unobtrusive/4.0.0/jquery.validate.unobtrusive.min.js"></script>
}
