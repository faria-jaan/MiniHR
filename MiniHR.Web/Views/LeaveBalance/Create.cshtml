@model MiniHR.Application.DTOs.DepartmentDto

<h2>Create Department</h2>
<form asp-action="Create">
    <div class="form-group">
        <label asp-for="DepartmentName"></label>
        <input asp-for="DepartmentName" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="HeadOfDepartment"></label>
        <input asp-for="HeadOfDepartment" class="form-control" />
    </div>
    <button type="submit" class="btn btn-success">Save</button>
</form>
